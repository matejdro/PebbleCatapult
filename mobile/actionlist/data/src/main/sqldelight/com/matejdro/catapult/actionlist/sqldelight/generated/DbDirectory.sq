CREATE TABLE dbDirectory (
    id INTEGER PRIMARY KEY NOT NULL,
    title TEXT NOT NULL
);

selectAll:
SELECT * FROM dbDirectory;

selectSingle:
SELECT * FROM dbDirectory WHERE id = ? LIMIT 1;

insert:
INSERT INTO dbDirectory (title) VALUES ?;

delete {
    DELETE FROM dbDirectory WHERE id = :id;
    DELETE FROM dbCatapultAction WHERE directoryId = :id;
}

update:
REPLACE INTO dbDirectory VALUES ?;
